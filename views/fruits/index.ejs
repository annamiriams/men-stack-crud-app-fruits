<!-- views/fruits/index.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Fruits Index</title>
</head>

<body>
    <h1>All Fruits</h1>
    <ul>
        <% fruits.forEach(fruit=> { %>
            <!-- wrap fruit.name in li and an a tag to they're each linked -->
            <li><a href="/fruits/<%= fruit._id %>">
                <%= fruit.name %>
            </a></li>
            <% }); %>
    </ul>
    <a href="/fruits/new">Add New Fruit</a>
</body>

</html>